<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#b9ff7b7b"
                android:endColor="#f2736b6b"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#f2afa4a4" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#ffffff"
                android:startColor="#dcdcdc"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#7c0e0e0e" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#00ffeaea"
                android:startColor="#f2c9bcbc"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#f2c9bcbc" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>